{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": "src",
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise",
            "es2015.collection"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
